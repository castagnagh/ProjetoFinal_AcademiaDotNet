@model ProjetoFinal.Models.Computador

@{
    ViewData["Title"] = "Excluir Computador";
}

<p class="display-6 mt-3">Excluir</p>

<h3>Você tem certeza que deseja excluir isto?</h3>
<div>
    <h4>Computador</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nr Patrimônio
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NumPatrimonio)
        </dd>
        <dt class = "col-sm-2">
            Descrição
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class = "col-sm-2">
            Seção
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Secao.Nome)
        </dd>
        <dt class = "col-sm-2">
            Marca
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Marca.Nome)
        </dd>
        <dt class = "col-sm-2">
            Tipo
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TipoComputador.Nome)
        </dd>
    </dl>
    
    <form asp-action="Delete" class="d-grid gap-2 d-md-block">
        <input type="hidden" asp-for="Id" />
        <a asp-action="Index" class="btn btn-outline-secondary btn-sm">Voltar</a> |
        <input type="submit" value="Excluir" class="btn btn-danger btn-sm" />
    </form>
</div>
