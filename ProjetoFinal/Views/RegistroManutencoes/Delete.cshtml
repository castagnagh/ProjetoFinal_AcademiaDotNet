@model ProjetoFinal.Models.RegistroManutencao

@{
    ViewData["Title"] = "Excluir Registro";
}

<p class="display-6 mt-3">Excluir</p>

<h3>Você tem certeza que deseja excluir isto?</h3>
<div>
    <h4>Registro Manutenção</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DataManutencao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataManutencao)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DataPrevisao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataPrevisao)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Computador)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Computador.Descricao)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Procedimento)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Procedimento.Descricao)
        </dd>
    </dl>
    
    <form asp-action="Delete" class="d-grid gap-2 d-md-block">
        <input type="hidden" asp-for="Id" />
        <a asp-action="Index" class="btn btn-outline-secondary btn-sm">Cancelar</a> |
        <input type="submit" value="Excluir" class="btn btn-danger btn-sm" />
    </form>
</div>
