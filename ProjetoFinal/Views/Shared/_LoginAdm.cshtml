@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    @if (User.IsInRole("Admin"))
    {
        <ul class="nav flex-column mb-auto">
            <li class="nav-item">
                <a class="nav-link d-flex align-items-center gap-2" asp-area="Admin" asp-controller="AdminUsers" asp-action="Index">
                    <svg class="bi"><use xlink:href="#gear-wide-connected" /></svg>
                    Gerenciar Usuários
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link d-flex align-items-center gap-2" asp-area="Admin" asp-controller="AdminRoles" asp-action="Index">
                    <svg class="bi"><use xlink:href="#gear-wide-connected" /></svg>
                    Gerenciar Perfis
                </a>
            </li>
        </ul>
    }
}
